import { ScrollView, VerticalBox } from "std-widgets.slint";

export component StaticContent inherits Window {
    in property <string> content_tag: "Page";
    in property <string> content;

    VerticalBox {
        min-width: 750px;
        min-height: 500px;
        text-content-tag := Text {
            text: root.content-tag;
            font-size: 28px;
            min-width: 260px;
            max-width: 260px;
            color: yellow;
        }
        ScrollView {
          VerticalBox {
              content := Text {
                  wrap: TextWrap.word-wrap;
                  text: root.content;
              }
          }
        }
    }
}
