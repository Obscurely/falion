import { Button, HorizontalBox, VerticalBox, ScrollView } from "std-widgets.slint";

export component DynContent inherits Window {
    callback next-enter();
    callback back-enter();

    in property <string> content_tag: "Content";
    in property <string> content;

    VerticalBox {
        min-width: 750px;
        min-height: 500px;
        text-content-tag := Text {
            text: root.content-tag;
            font-size: 28px;
            min-width: 260px;
            max-width: 260px;
            color: yellow;
        }
        ScrollView {
          VerticalBox {
              content := Text {
                  wrap: TextWrap.word-wrap;
                  text: root.content;
              }
          }
        }
        HorizontalBox {
            btn-content-back := Button {
                text: "";
                max-height: 30px;
                enabled: true;
                clicked => {
                    root.back-enter();
                }
            }
            spacing: 500px;
            btn-content-next := Button {
                text: "";
                max-height: 30px;
                enabled: true;
                clicked => {
                    root.next-enter();
                }
            }
        }
    }
}
